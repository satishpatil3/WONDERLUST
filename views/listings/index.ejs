<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>All Listings - Wanderlust</title>

    <!-- Bootstrap 5 CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />

    <style>
      /* Navbar default Bootstrap style with subtle shadow */
      .navbar-custom {
        background-color: #343a40;
        padding: 1rem 2rem;
        box-shadow: 0 3px 8px rgb(0 0 0 / 0.1);
      }

      .navbar-custom .navbar-brand {
        color: #f8f9fa !important;
        font-weight: 700;
        font-size: 1.8rem;
        display: flex;
        align-items: center;
        gap: 10px;
      }

      .navbar-custom .nav-link {
        color: #ced4da !important;
        font-weight: 500;
        margin: 0 15px;
        transition: color 0.3s ease, transform 0.2s ease;
        font-size: 1.1rem;
      }

      .navbar-custom .nav-link:hover,
      .navbar-custom .nav-link.active {
        color: #ffc107 !important; /* Bootstrap warning yellow */
        transform: scale(1.05);
      }

      .navbar-toggler {
        border: none;
        outline: none !important;
      }

      .navbar-toggler-icon {
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba(248,249,250,0.85)' stroke-width='2' stroke-linecap='round' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
      }

      /* Listings container */
      .container.py-4 {
        max-width: 1140px;
      }

      /* Card styling */
      .card.listing-card {
        border: 1px solid #dee2e6;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 3px 8px rgb(108 117 125 / 0.15);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
        background: #fff;
      }

      .card.listing-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 10px 20px rgb(108 117 125 / 0.3);
      }

      /* Image fixed height and smooth fit */
      .card-img-top.fixed-img {
        height: 220px;
        object-fit: cover;
        border-bottom: 3px solid #adb5bd;
        transition: transform 0.4s ease;
      }

      .card.listing-card:hover .card-img-top.fixed-img {
        transform: scale(1.04);
      }

      /* Card body padding */
      .card-body {
        padding: 1.25rem 1.5rem;
      }

      /* Card title */
      .card-title {
        font-weight: 600;
        font-size: 1.25rem;
        color: #212529;
        margin-bottom: 0.75rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      /* Price badge */
      .price-badge {
        display: inline-block;
        background: #6c757d;
        color: white;
        font-weight: 600;
        font-size: 1rem;
        padding: 0.35rem 1rem;
        border-radius: 50px;
        box-shadow: 0 2px 6px rgba(108, 117, 125, 0.6);
      }

      /* Responsive tweaks */
      @media (max-width: 767px) {
        .navbar-custom .nav-link {
          font-size: 1rem;
          margin: 0 8px;
        }

        .card-title {
          font-size: 1.1rem;
        }
      }

      /* Flash success message styling */
      .alert-success {
        max-width: 900px;
        margin: 1rem auto;
        font-size: 1.1rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 10px;
      }
    </style>
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom mb-4 shadow-sm">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <i class="fas fa-compass"></i> Wanderlust
        </a>

        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse mt-2 mt-lg-0" id="navbarNav">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" href="/listings">All Listings</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/listings/new">Add New Listing</a>
            </li>
          </ul>

          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <% if (!currentUser) { %>
              <li class="nav-item">
                <a class="nav-link" href="/user/register">Sign Up</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/user/login">Sign In</a>
              </li>
            <% } else { %>
              <li class="nav-item">
                <a class="nav-link" href="#">Hi, <%= currentUser.username %></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/user/logout">Logout</a>
              </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Flash success -->
    <% if (success && success.length > 0) { %>
    <div
      class="alert alert-success alert-dismissible fade show"
      role="alert"
      style="max-width: 900px; margin: 0 auto;"
    >
      <i class="fas fa-check-circle"></i>
      <%= success %>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
    <% } %>

    <!-- Listings Section -->
    <div class="container py-4">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">All Listings</h3>
        <a href="/listings/new" class="btn btn-outline-primary btn-lg">
          <i class="fas fa-plus"></i> Create New Listing
        </a>
      </div>

      <div class="row">
        <% for (let listing of allListings) { %>
          <div class="col-md-4 col-sm-6 mb-4">
            <a
              href="/listings/<%= listing._id %>"
              class="card listing-card h-100 text-decoration-none"
              title="<%= listing.title %>"
            >
              <img
                src="<%= listing.image?.url || 'https://source.unsplash.com/600x400/?travel' %>"
                alt="<%= listing.title || 'Listing image' %>"
                class="card-img-top fixed-img"
              />
              <div class="card-body d-flex flex-column justify-content-between">
                <h5 class="card-title text-truncate"><%= listing.title %></h5>
                <span class="price-badge">â‚¹<%= listing.price %></span>
              </div>
            </a>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
