<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
  <h1 class="text-center mb-4">Edit Listing</h1>

  <div class="card mx-auto shadow" style="max-width: 600px;">
    <div class="card-body">
      <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">

        <div class="form-group mb-3">
          <label for="title">Title</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="listing[title]"
            value="<%= listing.title %>"
            required
          />
        </div>

        <div class="form-group mb-3">
          <label for="description">Description</label>
          <textarea
            class="form-control"
            id="description"
            name="listing[description]"
            rows="4"
            required
          ><%= listing.description %></textarea>
        </div>

        <div class="form-group mb-3">
          <label for="price">Price</label>
          <input
            type="text"
            class="form-control"
            id="price"
            name="listing[price]"
            value="<%= listing.price %>"
            required
          />
        </div>

        <div class="form-group mb-3">
          <label for="location">Location</label>
          <input
            type="text"
            class="form-control"
            id="location"
            name="listing[location]"
            value="<%= listing.location %>"
            required
          />
        </div>

        <div class="form-group mb-3">
          <label for="filename">Image Filename</label>
          <input
            type="text"
            class="form-control"
            id="filename"
            name="listing[image][filename]"
            value="<%= listing.image?.filename || '' %>"
          />
        </div>

        <div class="form-group mb-3">
          <label for="url">Image URL</label>
          <input
            type="text"
            class="form-control"
            id="url"
            name="listing[image][url]"
            value="<%= listing.image?.url || '' %>"
          />
        </div>

        <div class="form-group mb-4">
          <label for="country">Country</label>
          <input
            type="text"
            class="form-control"
            id="country"
            name="listing[country]"
            value="<%= listing.country %>"
            required
          />
        </div>

        <button type="submit" class="btn btn-success w-100">
          Update Listing
        </button>
      </form>
    </div>
  </div>
</div>
